<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="jp.bizen.vrcfriends.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Platform.MaterialComponents"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".presentation.startup.StartupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.home.HomeActivity" />
        <activity
            android:name=".presentation.login.LoginRootActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>
</manifest>
